<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/zdjer_layout_item_bg"
    android:layout_height="match_parent">

    <!-- google 官方下拉刷新 -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_zdjer_activity_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

        <ListView
            android:id="@+id/lv_zdjer_alistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="?attr/lineColor"
            android:listSelector="@color/zdjer_transparent"
            android:dividerHeight="1px"
            android:scrollbars="none"
            android:scrollingCache="true" />
    </android.support.v4.widget.SwipeRefreshLayout>


    <com.zdjer.utils.widget.ToolTipView
        android:id="@+id/ttv_zdjer_activity_listview_tooltip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
</RelativeLayout>