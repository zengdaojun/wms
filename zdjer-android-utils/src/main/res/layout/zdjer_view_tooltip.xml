<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_zdjer_view_tooltip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/zdjer_blue">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_zdjer_view_tooptip_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/zdjer_page_error"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/pb_zdjer_view_tooptip_progress"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    style="@style/zdjer_loading" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_zdj_view_tooltip_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:lines="2"
                android:gravity="center"
                android:text="@string/zdjer_loading"
                android:textColor="?attr/zdjer_infoTextColor"
                android:textSize="@dimen/zdjer_text_size_16" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>